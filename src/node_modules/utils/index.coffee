fs = require 'fs'
path = require 'path'

#创建多层文件夹 同步
exports.mkdirsSync = ( dirpath )->
	if not fs.existsSync( dirpath )
		pathtmp = ''
		dirpath.split( '/' ).forEach ( dirname )->
			if pathtmp
				pathtmp = path.join( pathtmp, dirname )
			else
				pathtmp = dirname
			if not fs.existsSync( pathtmp )
				if not fs.mkdirSync( pathtmp )
					return false
	return true

#根据URL获取方法名称
exports.getCmdName = ( url )->
	reg = /(.*\/)(.*)(\.cmd)/
	rlt = reg.exec( url )
	return rlt[2]

#根据URL获取方法名称
exports.getMethodName = ( url )->
	reg = /(method=)(.*)(\&?)/
	rlt = reg.exec( url )
	return rlt[2]

#第一个字母大写
exports.transferFirstLetterUpper = ( cmdName )->
	return cmdName[0...1].toLocaleUpperCase() + cmdName[1..]